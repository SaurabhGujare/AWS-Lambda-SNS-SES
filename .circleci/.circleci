version: 2
jobs:
  build:
    docker:
      - image: circleci/openjdk:11.0.2-stretch
    steps:
      - checkout

      - run:
          name: Install packages
          command: sudo apt-get update || sudo apt-get update && sudo apt-get -y install wget zip unzip python3


      - run:
          name: Install awscli
          command: sudo pip install awscli  
      - run:
          name: Build Artifact
          command: |
            cd LambdaApp
            pwd
            ls -al
            mvn clean install
            
            ls -al
          
      - run:
          name: Zip Artifact
          command: |
            echo "Hello the current build number is ${CIRCLE_BUILD_NUM}"
            pwd
            mkdir -p codedeploy_artifact
            cp infrastructure/aws/codedeploy/*.sh .
            zip -r Lambda-csye6225-web-app-${CIRCLE_BUILD_NUM}.zip ~/csye6225-su19-lambda/webapp/csye6225/target/LambdaApp.jar *.sh *.yml
            mv Lambda-csye6225-web-app-${CIRCLE_BUILD_NUM}.zip codedeploy_artifact/
            cd codedeploy_artifact
            ls -al
            pwd
            cd ..
            pwd
            ls -al
      - run:
          name: Upload Artifact to S3
          command: |
            #  aws s3 sync codedeploy_artifact s3://${s3bucket}
            cd codedeploy_artifact; unzip Lambda-csye6225-web-app-${CIRCLE_BUILD_NUM}.zip; ls -al;aws deploy push --application-name LambdaApp --description "Test" --region us-east-1 --s3-location s3://${s3bucket}/csye6225-web-app-${CIRCLE_BUILD_NUM}.zip --source /home/circleci/project/codedeploy_artifact
            # cd codedeploy_artifact;ls; aws deploy push --application-name csye6225-webapp --description "Test" --region us-east-1 --s3-location s3://${s3bucket}/.zip --source .
      - run:
          name: Make CodeDeploy API call
          command: |
            echo "Hello CodeDeploy"
            echo "Testing" 
            aws deploy create-deployment --region us-east-1 --application-name LambdaApp --deployment-group csye6225-webapp-deployment --s3-location bucket=${s3bucket},key=Lambda-csye6225-web-app-${CIRCLE_BUILD_NUM}.zip,bundleType=zip
